@{
    ViewBag.Title = "LoginFail";
    }

@model project.Models.Admin

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>


    <style>
        #bgImg {
            background-image: url(../Content/Images/about.jpg);
        }
    </style>

     @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryui")
            @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>

<body>
    <br /><br /><br /><br />
    

    <div class="row">
        <div class="col-lg-3"></div>

        <div id="checking"></div>
        <div class="col-lg-6">
            <div class="alert alert-danger" style="font-family:'Berlin Sans FB'; font-size:x-large; align-content:center">
                Login Failed... Wrong Username Or Password
            </div>

            <br />
            <div class="container-fluid well well-sm" id="bgImg">
                <h1 style="color:white; font-family:'Hobo Std';"> ADMIN LOGIN </h1>
            </div>

            <form class="navbar-form container-fluid" method="post" action="/Admin/LoginOK">
                <div style="font-weight:bold">

                    <input type="text" id="user"  class="form-control" name="user" placeholder="Login Name" style="width:400px"  />
                     @Html.ValidationMessageFor(model => model.user)
                    <br/><br/>
                    <input type="password" class="form-control" name="pass" placeholder="Password" style="width:400px"  />
                     @Html.ValidationMessageFor(model => model.pass)
                    <br/><br/><br />

                    <button type="submit" id="b1" class="btn btn-success" value="sub"> LOGIN </button>
                    
                </div>
            </form>
            <div id="result"></div>
             @Scripts.Render("~/bundles/jquery")
    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#b1').click(function () {

                var userName = $('#user').val();

                //alert('User Name ='+ userName);
                $('#checking').show();
                $.getJSON("/Admin/CheckUserName?user=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User name is correct");

                    }
                    else {
                        $('#result').text("User Name is not correect");
                    }
                });

            });

        });
    </script>

        </div>


    </div>


    <br /><br /><br /><br /><br />
</body>

