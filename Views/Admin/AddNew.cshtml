@{
    ViewBag.Title = "AddNew";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model project.Models.NewItem

<style>

        body {
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% auto;
            background-image: url(../Content/images/bg4.jpg);
        }

        #bgImg {
        background-image: url(../Content/images/about.jpg);
        color: white;
    }
   
          </style>

<div   id="bgImg">
   <p class="lead" style="font-family:'Hobo Std'; font-size:x-large; color:white"> &nbsp&nbsp&nbsp&nbsp  ADD FOOD: </p>
    
</div>
<br /> <br />

<div style="font-weight:bold;margin-left:10%">
        @using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.LabelFor(m => m.name)
            @Html.TextBoxFor(m => m.name)
             <br /><br />

            @Html.LabelFor(m => m.desc)
            @Html.TextBoxFor(m => m.desc)
            <br/><br/>

           
            <input type="file" name="file" id="file" size="85" />
    <br /><br />

            <input type="submit" value="Add Food" size="60" />
        }
    </div>
 
     
